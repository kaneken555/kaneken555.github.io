const apps = [
  {
    name: "Budget Meter",
    description: "予算の残りをひと目で確認できるアプリ",
    appStoreUrl: "https://apps.apple.com/jp/app/budget-meter/id6757947139",
    detailUrl: "/apps/budget-meter",
  },
  {
