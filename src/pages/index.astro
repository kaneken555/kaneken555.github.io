    appStoreUrl: "https://apps.apple.com/jp/app/task-space-%E6%AC%A1%E3%81%AB%E3%82%84%E3%82%8B%E3%82%BF%E3%82%B9%E3%82%AF%E7%AE%A1%E7%90%86/id6757950675",
  },
  {
    name: "Meal Note",
    description: "食事をシンプルに記録できるアプリ",
    appStoreUrl: "https://apps.apple.com/jp/app/meal-note-%E9%A3%9F%E4%BA%8B%E8%A8%98%E9%8C%B2/id6757949618",
  },
  {
    name: "Sleep Note",
