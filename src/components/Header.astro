---
interface Props {
  name: string;
}

const { name } = Astro.props;
---

<header>
  <div class="inner">
    <strong>{name}</strong>
    <nav aria-label="site">
      <a href="#about">About</a>
      <a href="#works">Works</a>
      <a href="#skills">Skills</a>
      <a href="#contact">Contact</a>
    </nav>
  </div>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    position: sticky;
    top: 0;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid #eee;
  }
  .inner {
    max-width: 980px;
    margin: 0 auto;
    padding: 14px 16px;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }
  nav {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }
  nav a {
    text-decoration: none;
    padding: 6px 10px;
    border: 1px solid #eee;
    border-radius: 999px;
    color: inherit;
  }
  nav a:hover {
    border-color: #ccc;
  }
</style>
